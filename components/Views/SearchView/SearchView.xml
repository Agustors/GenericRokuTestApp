<?xml version = "1.0" encoding = "utf-8" ?>

<component name = "SearchView" extends = "BaseView" initialFocus="keyboard">

    <interface> 
        <field id = "itemContent" type = "node" alwaysnotify="true" onChange = "setContent"/>
    </interface>

    <script type="text/brightscript" uri="pkg:/components/Views/SearchView/SearchView.brs" />

    <children>

    <Group id="serachOptionsGroup" translation = "[30,75]">
        <Button 
            id = "searchMoviesButton"
            showFocusFootprint = "true"
            text = "search Series"
            focusedTextColor = "0x262626ff"
            height = "70"
            minwidth = "265"
            maxwidth = "265"
            iconUri = "pkg:/images/stars/star4.png" 
            translation = "[0,80]"/>

        <Button 
            id = "searchSeriesButton"
            showFocusFootprint = "true"
            text = "search Movies"
            focusedTextColor = "0x262626ff"
            height = "70"
            minwidth = "265"
            maxwidth = "265"
            iconUri = "pkg:/images/stars/star4.png" 
            translation = "[0,170]"/>
    </Group>
            
    <Group id="keyboardGroup" translation = "[300,75]">
        <Keyboard id = "Keyboard" />
    </Group>


    <Group id="SearchResultsGroup" translation = "[75,360]">
        <Label 
            id="actorsLabel" 
            text = "Actors"
            width = "0" 
            height = "80" 
            horizAlign = "left"
            vertAlign ="center"
            font="font:MediumBoldSystemFont"
            translation = "[5,20]"
            />

        <Rowlist 
            id="actorsRowList"
            itemComponentName = "RowListItem" 
            itemSize = "[1190,240]" 
            rowItemSize = "[[200, 200]]"
            rowItemSpacing = "[[20, 0]]"
            showRowCounter = "true"
            rowCounterRightOffset = "2.0"
            drawFocusFeedback = "true"
            drawFocusFeedbackOnTop = "true"
            vertFocusAnimationStyle = "fixedFocusWrap" 
            rowFocusAnimationStyle = "floatingfocus"   
            translation = "[0,70]"
        />
    </Group>

    </children>

</component>